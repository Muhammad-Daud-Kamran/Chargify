<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark_navy"
    android:padding="7dp"
    tools:context=".mainactivityhome">



    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:lottie_rawRes="@raw/electric"
        app:lottie_speed="0.5"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="@string/app_name"
     android:textColor="@color/bright_cyan"
     android:textSize="50dp"
     android:textAlignment="center"
     android:layout_marginTop="8dp"
     android:fontFamily="@font/roboto_condensed_bold_italic"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvmainhome"
        android:layout_margin="15dp"/>


</LinearLayout>